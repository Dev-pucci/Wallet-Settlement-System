{
	"info": {
		"_postman_id": "wallet-settlement-api",
		"name": "Wallet Settlement API",
		"description": "Complete API collection for Wallet & Settlement Microservice",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080/api/v1",
			"type": "string"
		},
		{
			"key": "customerId",
			"value": "customer-123",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Wallet Operations",
			"item": [
				{
					"name": "Get Wallet Balance",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/wallets/{{customerId}}/balance",
							"host": ["{{baseUrl}}"],
							"path": ["wallets", "{{customerId}}", "balance"]
						}
					},
					"response": []
				},
				{
					"name": "Topup Wallet",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"transactionId\": \"{{$randomUUID}}\",\n    \"amount\": 100.00,\n    \"reference\": \"Bank transfer topup\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/wallets/{{customerId}}/topup",
							"host": ["{{baseUrl}}"],
							"path": ["wallets", "{{customerId}}", "topup"]
						}
					},
					"response": []
				},
				{
					"name": "Consume from Wallet",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"transactionId\": \"{{$randomUUID}}\",\n    \"amount\": 25.00,\n    \"reference\": \"Purchase payment\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/wallets/{{customerId}}/consume",
							"host": ["{{baseUrl}}"],
							"path": ["wallets", "{{customerId}}", "consume"]
						}
					},
					"response": []
				},
				{
					"name": "Test Insufficient Balance",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"transactionId\": \"{{$randomUUID}}\",\n    \"amount\": 10000.00,\n    \"reference\": \"Large purchase - should fail\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/wallets/{{customerId}}/consume",
							"host": ["{{baseUrl}}"],
							"path": ["wallets", "{{customerId}}", "consume"]
						}
					},
					"response": []
				},
				{
					"name": "Test Duplicate Transaction",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"transactionId\": \"duplicate-tx-123\",\n    \"amount\": 50.00,\n    \"reference\": \"Duplicate transaction test\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/wallets/{{customerId}}/topup",
							"host": ["{{baseUrl}}"],
							"path": ["wallets", "{{customerId}}", "topup"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Reconciliation Operations",
			"item": [
				{
					"name": "Get Reconciliation Report",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/reconciliation/report?date=2023-12-01",
							"host": ["{{baseUrl}}"],
							"path": ["reconciliation", "report"],
							"query": [
								{
									"key": "date",
									"value": "2023-12-01"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Export Reconciliation Report",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/reconciliation/report/export?date=2023-12-01",
							"host": ["{{baseUrl}}"],
							"path": ["reconciliation", "report", "export"],
							"query": [
								{
									"key": "date",
									"value": "2023-12-01"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Upload CSV File",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": "sample_external_transactions.csv"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/reconciliation/upload-csv",
							"host": ["{{baseUrl}}"],
							"path": ["reconciliation", "upload-csv"]
						}
					},
					"response": []
				},
				{
					"name": "Upload JSON File",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": "sample_external_transactions.json"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/reconciliation/upload-json",
							"host": ["{{baseUrl}}"],
							"path": ["reconciliation", "upload-json"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Health & Monitoring",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/actuator/health",
							"host": ["{{baseUrl}}"],
							"path": ["actuator", "health"]
						}
					},
					"response": []
				},
				{
					"name": "Application Info",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/actuator/info",
							"host": ["{{baseUrl}}"],
							"path": ["actuator", "info"]
						}
					},
					"response": []
				},
				{
					"name": "Metrics",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/actuator/metrics",
							"host": ["{{baseUrl}}"],
							"path": ["actuator", "metrics"]
						}
					},
					"response": []
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	]
}